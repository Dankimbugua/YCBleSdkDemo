<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dashboard_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.ycblesdkdemo.MainActivity">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/hello_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="Camilo"/>
        </LinearLayout>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/user_profile_edited" />
    </RelativeLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ecg_anim_la"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:alpha="0.5"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_colorFilter="@color/white"
        app:lottie_rawRes="@raw/ecg_line_anim"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/scan_anim"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_colorFilter="@color/white"
        app:lottie_rawRes="@raw/scannig_anim"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/device_cv"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/head"
        android:layout_marginHorizontal="30dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/scan_title_tv"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Seleccione su dispositivo"
                android:textSize="20dp"/>

            <ListView
                android:id="@+id/device_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scan_title_tv"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:soundEffectsEnabled="true" />
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/con_device_rl"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/scan_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_toEndOf="@+id/device_battery_tv"
                    android:id="@+id/device_namemac_rl"
                    android:layout_marginHorizontal="20dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_watch_24"/>
                    <TextView
                        android:id="@+id/item_name_view"
                        android:text="name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="35dp"
                        ></TextView>

                    <TextView
                        android:id="@+id/item_mac_view"
                        android:text="mac"
                        android:layout_below="@+id/item_name_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="35dp"
                        ></TextView>

                </RelativeLayout>
                <TextView
                    android:id="@+id/device_battery_tv"
                    android:drawableLeft="@drawable/ic_baseline_battery_std_24"
                    android:drawableTint="@color/colorSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="@color/colorSecond"
                    android:textSize="40dp"
                    android:text="--%"/>
            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--开始搜索设备-->
        <Button
            android:id="@+id/bt_start_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1.0"
            android:text="Start searching" />

        <!--结束搜索设备-->
        <Button
            android:id="@+id/bt_stop_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1.0"
            android:text="Stop searching" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_disconnect_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="disconnect" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_connect_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接固定设备"
        android:visibility="gone" />

    <!--实时状态上报-->
    <Button
        android:id="@+id/bt_write_real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real time status reporting"
        android:visibility="gone" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_get_history_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get History data" />

        <Button
            android:visibility="gone"
            android:id="@+id/bt_delete_history_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete History data" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_ui_getinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件断点信息"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/open_real_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="OpenRealTemp"
            android:textSize="10dp" />

        <Button
            android:visibility="gone"
            android:id="@+id/read_real_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="ReadRealTemp"
            android:textSize="10dp" />

        <Button
            android:visibility="gone"
            android:id="@+id/close_real_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="CloseRealTemp"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:id="@+id/send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sendTestMessage" />

        <Button
            android:visibility="gone"
            android:id="@+id/send_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sendMobileModel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/get_scheduleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getScheduleInfo" />

        <Button
            android:visibility="gone"
            android:id="@+id/add_scheduleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="addScheduleInfo" />
    </LinearLayout>

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/device_cv"
        android:layout_above="@+id/bt_write_test"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/blood_preasure_cv"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/bt_write_test"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_below="@+id/device_cv">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/blood_preasure_ll"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Presión arterial"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/DBP_tv"
                                android:textSize="70dp"
                                android:textColor="@color/colorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="---"/>
                            <TextView
                                android:textSize="70dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"/>
                            <TextView
                                android:id="@+id/SBP_tv"
                                android:textSize="70dp"
                                android:textColor="@color/colorSecond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ritmo cardiaco"/>
                            <TextView
                                android:id="@+id/heart_tv"
                                android:drawableLeft="@drawable/ic_baseline_favorite_24"
                                android:drawablePadding="4dp"
                                android:textSize="70dp"
                                android:textColor="@color/colorAccent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/preasure_status_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inicie el ECG para diagnóstico"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/aha_tv"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="*Según la American Heart Assosiation"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/bt_write_test"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="12dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="14dp"
                android:layout_below="@+id/device_cv">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <WebView
                        android:id="@+id/metabase_wv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </HorizontalScrollView>




    <Button
        android:id="@+id/bt_write_test"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/start_ecg_bg"
        android:enabled="false"
        android:soundEffectsEnabled="true"
        android:text="Iniciar ECG"
        android:textColor="@color/white" />

</RelativeLayout>